<UserControl x:Class="AutocadPlugin.MainGUI"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework">
    <StackPanel Orientation="Vertical">
        <!-- Container for category buttons -->
        <Grid x:Name="CategoryButtonsGrid" Height="30" VerticalAlignment="Top" Margin="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button x:Name="StreetSignsCategory" Content="Street Signs" Width="100" Height="30" Click="StreetSignsCategory_Click" Grid.Column="0"/>
            <Button x:Name="RoadMarkingsCategory" Content="Road Markings" Width="100" Height="30" Click="RoadMarkingsCategory_Click" Grid.Column="1"/>
        </Grid>
        <!-- Container for displaying category UI -->
        <ContentControl x:Name="CategoryGUIContent">

        </ContentControl>
    </StackPanel>
</UserControl>
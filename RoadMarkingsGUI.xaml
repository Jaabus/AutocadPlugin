<UserControl x:Class="AutocadPlugin.RoadMarkingsGUI"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
                xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
				xmlns:localRes="clr-namespace:AutocadPlugin.Resources" >
    <Grid>
        <ComboBox x:Name="LineTypeComboBox" Width="Auto" MaxWidth="250" Height="30" VerticalAlignment="Top" Margin="10" />
        <Button x:Name="DrawLineButton" Width="Auto" MaxWidth="200" Height="30" VerticalAlignment="Top" Margin="10,50,10,10" Content="{x:Static localRes:Resources.DrawLineButton}" Click="DrawLineButton_Click" />
        <Button x:Name="ConvertLineButton" Width="Auto" MaxWidth="200" Height="30" VerticalAlignment="Top" Margin="10,90,10,10" Content="{x:Static localRes:Resources.ConvertLineButton}" Click="ConvertLineButton_Click" />
        <Button x:Name="AddOffsetLineButton" Width="Auto" MaxWidth="200" Height="30" VerticalAlignment="Top" Margin="10,130,10,10" Content="{x:Static localRes:Resources.AddOffsetLineButton}" Click="AddOffsetLineButton_Click" />
        <Button x:Name="AnnotatePolylineButton" Width="Auto" MaxWidth="200" Height="30" VerticalAlignment="Top" Margin="10,170,10,10" Content="{x:Static localRes:Resources.AnnotatePolylineButton}" Click="AnnotatePolylineButton_Click" />
		<CheckBox x:Name="AnnotateRoadLinesCheckBox" Content="{x:Static localRes:Resources.AnnotateRoadLinesCheckBox}" HorizontalAlignment="Center" Margin="10,220,10,10" Checked="AnnotateRoadLinesCheckBox_Checked" Unchecked="AnnotateRoadLinesCheckBox_Unchecked"/>
    </Grid>
</UserControl>
<UserControl x:Class="AutocadPlugin.RoadMarkingsGUI"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
                xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework">
    <Grid>
		<ComboBox x:Name="LineTypeComboBox" Width="200" Height="30" VerticalAlignment="Top" Margin="10" />
		<Button x:Name="DrawLineButton" Width="150" Height="30" VerticalAlignment="Top" Margin="10,70,10,10" Content="Draw Road Line" Click="DrawLineButton_Click" />
		<Button x:Name="AddDoubleLineButton" Width="150" Height="30" VerticalAlignment="Top" Margin="10,120,10,10" Content="Add Double Line" Click="AddDoubleLineButton_Click" />
		<Button x:Name="AnnotatePolylineButton" Width="150" Height="30" VerticalAlignment="Top" Margin="10,170,10,10" Content="Annotate Polyline" Click="AnnotatePolylineButton_Click" />
		<CheckBox x:Name="AnnotateRoadLinesCheckBox" Content="Add Numbers To Road Lines" VerticalAlignment="Top" Margin="10,220,10,10" Checked="AnnotateRoadLinesCheckBox_Checked" Unchecked="AnnotateRoadLinesCheckBox_Unchecked"/>
    </Grid>
</UserControl>
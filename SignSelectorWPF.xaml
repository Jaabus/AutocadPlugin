<UserControl x:Class="AutocadPlugin.SignSelectorWPF"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework">  
  <Grid>
        <!-- First ComboBox for Sign Folder Selection -->
        <ComboBox x:Name="SignDirectoryComboBox" Width="200" Height="30" VerticalAlignment="Top" Margin="10"
                  SelectionChanged="SignDirectoryComboBox_SelectionChanged" />
        <!-- Second ComboBox for .dwg Files -->
        <ComboBox x:Name="SignsComboBox" Width="200" Height="30" VerticalAlignment="Top" Margin="10,50,10,10" />
        <!-- Button to insert sign -->
        <Button x:Name="InsertSignButton" Width="100" Height="30" VerticalAlignment="Top" Margin="10,100,10,10" Content="Insert Sign" Click="InsertSignButton_Click" /> 
    </Grid>  
</UserControl>
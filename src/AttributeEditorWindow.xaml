<Window x:Class="AutocadPlugin.AttributeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Attributes" Height="300" Width="400">
    <Grid>
        <DataGrid x:Name="AttributesDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" IsReadOnly="True" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Click="OkButton_Click" />
    </Grid>
</Window>
